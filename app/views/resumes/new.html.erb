<%= simple_form_for [@job, @resume] do |f| %>

    <div class="container">
    <div class="col-md-8" style="margin-left:155px">
        <div class="form-area">
            <form role="form">
            <br style="clear:both">
                        <h3 style="margin-bottom: 25px; text-align: center;">ADD A JOB</h3>
                      <div class="form-group">


                  <%= f.input :content ,:class => "textarea rows='3' "%>
                  <%= f.input :attachment%>
                  <%= f.submit "Submit", :class => "btn btn-primary pull-right"%>

                    </div>
            </form>

        </div>
      </div>
    </div>

<% end %>
